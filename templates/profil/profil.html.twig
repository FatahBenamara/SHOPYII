{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <h1>Mon Profil</h1>

    <table class="table">
        <tbody>

            
            <tr>
                <th>Email</th>
                <td>{{ app.user.email }}</td>
            </tr>

            
            <tr>
                <th>Password</th>
                <td>***</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ app.user.pseudo }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ app.user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ app.user.prenom }}</td>
            </tr>
            <tr>
                <th>Civilite</th>
                <td>{{ app.user.civilite }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ app.user.ville }}</td>
            </tr>
            <tr>
                <th>Code_postal</th>
                <td>{{ app.user.codePostal }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ app.user.adresse }}</td>
            </tr>

        </tbody>
    </table>


    <h1>Nombre de Commande: {{app.user.commandes|length}} </h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Montant</th>
                <th>Date_enregistrement</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in app.user.commandes %}
            <tr>
                
                <td>{{ commande.montant }}</td>
                <td>{{ commande.dateEnregistrement ? commande.dateEnregistrement|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commande.etat }}</td>
                <td>
                    <a href="{{ path('profil_commande_show', {'id': commande.id}) }}">Voir ma commande</a>
                 {#  <a href="{{ path('profil_commande_edit', {'id': commande.id}) }}">edit</a>#} 
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
  

    <a href="{{ path('profil_membre_edit') }}">Modifier mon Profil</a>

   
{% endblock %}